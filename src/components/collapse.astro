---
import { Icon } from "astro-icon/components";

type Props = {
  label: string;
};

const { label } = Astro.props;
---

<div
  x-data="toggler"
  class="group flex flex-col gap-4 rounded transition-all data-[ui=true]:bg-neutral-800 data-[ui=true]:px-4 data-[ui=true]:py-4"
>
  <button
    @click="toggle"
    class="relative flex h-10 items-center justify-between py-4 text-left font-medium transition-all hover:cursor-pointer"
  >
    <div
      class="pointer-events-none absolute inset-0 rounded-sm transition-all group-hover:-inset-x-4 group-hover:-inset-y-2 group-hover:bg-white/5 group-data-[ui=true]:opacity-0"
    >
    </div>
    <span>{label}</span>
    <Icon name="chevron" class="rotate-90 transition-all group-data-[ui=true]:-rotate-90" />
  </button>
  <div class="max-h-0 overflow-hidden transition-all duration-300 group-data-[ui=true]:max-h-96">
    <div class="flex flex-col gap-4"><slot /></div>
  </div>
</div>
