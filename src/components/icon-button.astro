---
type Props = {
  id?: string;
  class?: string;
  label?: string;
  data?: string;
  href?: string;
};

const { class: className, label, href, ...props } = Astro.props;
---

<a
  href={href}
  class:list={[
    "pointer-events-auto flex size-10 items-center justify-center rounded-full bg-transparent transition-all hover:cursor-pointer hover:bg-neutral-800",
    className,
  ]}
  aria-label={label}
  {...props}
>
  <slot />
</a>
