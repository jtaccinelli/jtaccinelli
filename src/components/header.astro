---
import { Icon } from "astro-icon/components";
import IconButton from "~/components/icon-button.astro";

type Props = {
  id: string;
  text: string;
};

const { id, text } = Astro.props;
---

<a href={`#${id}`} class="sticky top-0 z-10 flex justify-between border-b-2 border-neutral-800 bg-neutral-900 p-8">
  <h3 id={id} class="font-bold">{text}</h3>
  <IconButton label={`Copy ${text} Link`} x-data="copier" data-id={id} data-text={text}>
    <Icon name="link-alt" class="h-6 w-6 text-white" />
  </IconButton>
</a>
